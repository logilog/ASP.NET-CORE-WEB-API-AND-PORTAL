@model LoginViewModel
@{
    Layout = "_LayoutBase";
    ViewData["Title"] = "Login";
}
<div class="container-fluid">
    <div class="row no-gutter">
        <div class="col-md-6 d-none d-md-flex bg-image"></div>
        <div class="col-md-6 bg-light">
            <div class="login d-flex align-items-center py-5">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-7 col-xl-6 mx-auto">
                            <div class="mb-4"><img src="../images/menu/logo.svg"></div>
                            <form method="post" asp-controller="Login" asp-action="Index">
                                <div class="form-group mb-3">
                                    <input id="inputEmail" type="text" placeholder="User Name" required="" autofocus="" class="form-control border-0 shadow-sm px-4" asp-for="Username">
                                </div>
                                <div class="form-group mb-3">
                                    <input id="inputPassword" type="password" placeholder="Password" required="" class="form-control border-0 shadow-sm px-4 text-danger" asp-for="Password"><br>
                                </div>
                                <div class="custom-control custom-checkbox mb-3">
                                    <input id="customCheck1" type="checkbox" checked class="custom-control-input"> <label for="customCheck1" class="custom-control-label">
                                        Şifre
                                        hatırlatma
                                    </label>
                                </div>
                                <button type="submit" class="btn btn-danger btn-block text-uppercase mb-2 shadow-sm">Giriş</button>
                            </form>
                            @if (Model != null && !Model.Success)
                            {
                                <div class="alert alert-danger" role="alert">
                                    @Model.Message
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>