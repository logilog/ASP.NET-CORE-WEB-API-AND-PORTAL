@model PersonViewModel
@{
    Layout = "_LayoutPageBase";
    ViewData["Title"] = "Person Güncelleme";
}
<div class="card">
    <div class="card-body">
        <h4 class="text-info"><i class="fas fa-plus"></i> Person Ekle</h4>
        <div class="col-lg-12 card-body">
            <form class="forms-sample" method="post" asp-controller="Person" asp-action="Guncelleme">
                <div class="form-row">
                    <div class="form-group col-lg-4">
                        <label for="txtPosition">DOGUM YERI</label>
                        <input type="text" class="form-control" asp-for="Person.DOGUMYERI" autocomplete="off" placeholder="DOGUMYERI">
                    </div>
                    <div class="form-group col-lg-4">
                        <label for="txtOffice">KIMLIK NO</label>
                        <input type="text" class="form-control" asp-for="Person.KIMLIKNO" autocomplete="off" placeholder="KIMLIK NO">
                    </div>
                    <div class="form-group col-lg-4">
                        <label for="txtOffice">PID</label>
                        <input type="text" class="form-control" asp-for="Person.PID" autocomplete="off" placeholder="PID">
                    </div>
                    <div class="form-group col-lg-4">
                        <label for="txtOffice">SOYAD</label>
                        <input type="text" class="form-control" asp-for="Person.SOYAD" autocomplete="off" placeholder="SOYAD">
                    </div>
                    <div class="form-group col-lg-4">
                        <label for="txtOffice">ULKE UYRUK</label>
                        <input type="text" class="form-control" asp-for="Person.ULKEUYRUK" autocomplete="off" placeholder="ULKE UYRUK">
                    </div>
                    <div class="form-group col-lg-4">
                        <label for="txtOffice">AD</label>
                        <input type="text" class="form-control" asp-for="Person.AD" autocomplete="off" placeholder="AD">
                    </div>
                    <input type="hidden" asp-for="Person.ID" />
                </div>
                <div class="form-row">
                    <div class="col-lg-12 pt-4">
                        <button type="submit" class="btn btn-primary float-lg-right mr-2">Güncelle</button>
                    </div>
                </div>
                <div class="mt-3">
                    @if (Model != null && !Model.Success)
                    {
                        <div class="alert alert-danger" role="alert">
                            @Model.Message
                        </div>
                    }
                </div>
            </form>
        </div>
    </div>
</div>
<div class="line"></div>