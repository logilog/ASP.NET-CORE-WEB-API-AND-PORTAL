@model PoliceViewModel
@{
    Layout = "_LayoutPageBase";
    ViewData["Title"] = "Poliçe Ekleme";
}
<div class="card">
    <div class="card-body">
        <h4 class="text-info"><i class="fas fa-plus"></i> Poliçe Ekle</h4>
        <div class="col-lg-12 card-body">
            <form class="forms-sample" method="post" asp-controller="Police" asp-action="Ekleme">
                <div class="form-row">
                    <div class="form-group col-lg-4">
                        <label for="txtName">Poliçe</label>
                        <input type="text" class="form-control" asp-for="Police.POLID" autocomplete="off" placeholder="Poliçe">
                    </div>
                    <div class="form-group col-lg-4">
                        <label for="txtPosition">Branş</label>
                        <input type="text" class="form-control" asp-for="Police.BRANSKOD" autocomplete="off" placeholder="Branş">
                    </div>
                    <div class="form-group col-lg-4">
                        <label for="txtOffice">Son Zeyl No</label>
                        <input type="text" class="form-control" asp-for="Police.SONZEYLNO" autocomplete="off" placeholder="Son Zeyl No">
                    </div>
                </div>
                <div class="form-row">
                    <div class="col-lg-12 pt-4">
                        <button type="submit" class="btn btn-primary float-lg-right mr-2">Ekle</button>
                    </div>
                </div>
                <div class="mt-3">
                    @if (Model != null && !Model.Success)
                    {
                        <div class="alert alert-danger" role="alert">
                            @Model.Message
                        </div>
                    }
                </div>
            </form>
        </div>
    </div>
</div>
<div class="line"></div>