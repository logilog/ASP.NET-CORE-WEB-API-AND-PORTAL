@model ZeylViewModel
@{
    Layout = "_LayoutPageBase";
    ViewData["Title"] = "Zeyl Güncelleme";
}
<div class="card">
    <div class="card-body">
        <h4 class="text-info"><i class="fas fa-plus"></i> Zeyl Ekle</h4>
        <div class="col-lg-12 card-body">
            <form class="forms-sample" method="post" asp-controller="Zeyl" asp-action="Guncelleme">
                <div class="form-row">
                    <div class="form-group col-lg-4">
                        <label for="txtName">POLID</label>
                        <input type="text" class="form-control" asp-for="Zeyl.POLID" autocomplete="off" placeholder="POLID">
                    </div>
                    <div class="form-group col-lg-4">
                        <label for="txtPosition">TARIFENO</label>
                        <input type="text" class="form-control" asp-for="Zeyl.TARIFENO" autocomplete="off" placeholder="TARIFENO">
                    </div>
                    <div class="form-group col-lg-4">
                        <label for="txtOffice">ZEYLNO</label>
                        <input type="text" class="form-control" asp-for="Zeyl.ZEYLNO" autocomplete="off" placeholder="ZEYLNO">
                    </div>
                    <div class="form-group col-lg-4">
                        <label for="txtOffice">ZEYLTIP</label>
                        <input type="text" class="form-control" asp-for="Zeyl.ZEYLTIP" autocomplete="off" placeholder="ZEYLTIP">
                    </div>
                    <input type="hidden" asp-for="Zeyl.ID" />
                </div>
                <div class="form-row">
                    <div class="col-lg-12 pt-4">
                        <button type="submit" class="btn btn-primary float-lg-right mr-2">Güncelle</button>
                    </div>
                </div>
                <div class="mt-3">
                    @if (Model != null && !Model.Success)
                    {
                        <div class="alert alert-danger" role="alert">
                            @Model.Message
                        </div>
                    }
                </div>
            </form>
        </div>
    </div>
</div>
<div class="line"></div>