@{
    Layout = "_LayoutPageBase";
    ViewData["Title"] = "Zeyl Listeleme";
}
@model ZeylViewModel
@section PageStyles{
}
<div class="card">
    <div class="card-body">
        <div class="row">
            <div class="col-lg-2">
                <h4 class="text-info"><i class="fas fa-list"></i> Zeyl Liste</h4>
            </div>
            <div class="col-lg-10">
                <a asp-controller="Zeyl" asp-action="Ekleme" class="btn btn-info"><i class="fas fa-plus"></i></a>
            </div>
        </div>
        <div class="col-lg-12 card-body">
            <table id="example" class="display" style="width:100%">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>ZEYLNO</th>
                        <th>ZEYLTIP</th>
                        <th>POLID</th>
                        <th>TARIFENO</th>

                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Success)
                    {
                        foreach (var ZeylItem in Model.ZeylListesi)
                        {
                    <tr>
                        <td>@ZeylItem.ID</td>
                        <td>@ZeylItem.ZEYLNO</td>
                        <td>@ZeylItem.ZEYLTIP</td>
                        <td>@ZeylItem.POLID</td>
                        <td>@ZeylItem.TARIFENO</td>
                        


                        <td>
                            <a asp-controller="Zeyl" asp-action="Guncelleme" asp-route-id="@ZeylItem.ID" class="ml-1 btn btn-info"><i class="fa fa-edit"></i></a>
                        </td>
                    </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
